<%- include ('../partials/header') -%>
<div class="container">
<div class="row">
<h1 style="text-align: center; ">Edit your <%= campground.title%></h1>


<div style="width: 30%;margin: 30px auto;">
    
    <form  action="/Campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group"> 
            <input type="text" class="form-control" value="<%= campground.title %>" name="title">
        </div> 
        <div class="form-group">
            <input class="form-control" type="text" value="<%= campground.image%>" name="image">
        </div>   
        <div class="form-group">
            <input class="form-control" type="text" value="<%=campground.description%>" name="description">
        </div> 
        <div class="form-group">   
            <button class="btn btn-info btn-md btn-block ">SUBMIT</button>
        </div>
    </form>
    <a href="/Campgrounds/" >GO BACK</a>
</div>

</div>
</div>
<%- include ('../partials/footer') -%>